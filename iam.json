{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "S3BucketAccess",
        "Effect": "Allow",
        "Action": [
          "s3:PutObject",
          "s3:GetObject",
          "s3:ListBucket",
          "s3:DeleteObject"
        ],
        "Resource": [
          "arn:aws:s3:::${{ secrets.S3_BUCKET }}",
          "arn:aws:s3:::${{ secrets.S3_BUCKET }}/*"
        ]
      },
      {
        "Sid": "TranscribeAccess",
        "Effect": "Allow",
        "Action": [
          "transcribe:StartTranscriptionJob",
          "transcribe:GetTranscriptionJob",
          "transcribe:ListTranscriptionJobs",
          "transcribe:DeleteTranscriptionJob"
        ],
        "Resource": "*"
      },
      {
        "Sid": "TranslateAccess",
        "Effect": "Allow",
        "Action": [
          "translate:TranslateText",
          "translate:ListLanguages"
        ],
        "Resource": "*"
      },
      {
        "Sid": "PollyAccess",
        "Effect": "Allow",
        "Action": [
          "polly:SynthesizeSpeech",
          "polly:DescribeVoices",
          "polly:ListLexicons"
        ],
        "Resource": "*"
      }
    ]
  }